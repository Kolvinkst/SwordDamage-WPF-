<Window x:Class="SwordDamage__WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordDamage__WPF_"
        mc:Ignorable="d"
        Title="Sword Damage" Height="175" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="flaming" Content="Flaming" Checked="flaming_Checked" Unchecked="flaming_Unchecked" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <CheckBox x:Name="magic" Content="Magic" Grid.Column="1" Checked="magic_Checked" Unchecked="magic_Unchecked" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Roll for Damage" Grid.Row="1" Grid.ColumnSpan="2" Margin="20, 10" Click="Button_Click"/>
        <TextBlock x:Name="damage" TextWrapping="Wrap" Text="damage" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
